{
  "name": "auto-test",
  "version": "0.1.0",
  "description": "CLI to automatically generate tests for your code using AI",
  "main": "dist/index.js",
  "bin": {
    "auto-test": "./dist/cli.js",
    "auto-test-ci": "./dist/ci.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest --config jest.config.test.js",
    "test:watch": "jest --config jest.config.test.js --watch",
    "test:coverage": "jest --config jest.config.test.js --coverage",
    "test:ignore-ts": "cross-env TS_NODE_TRANSPILE_ONLY=1 jest --config jest.config.test.js",
    "lint": "eslint --fix src/**/*.ts",
    "build:test": "tsc -p tsconfig.test.json",
    "build:vscode": "cd vscode && npm install && npm run build",
    "prepare": "husky install && npm run build",
    "precommit": "npm run validate",
    "validate": "node validate.js",
    "ci": "node dist/ci.js"
  },
  "keywords": [
    "test",
    "generation",
    "ai",
    "automation",
    "integration-tests",
    "jest",
    "vitest",
    "mocha"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.12.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "openai": "^4.20.1",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
